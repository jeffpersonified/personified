source 'https://rubygems.org'
ruby "2.0.0"

# Server
gem 'thin'

# Bundle edge Rails instead:
gem 'rails', :git => 'git://github.com/rails/rails.git'

# Database
gem 'pg'
gem 'awesome_print'

# Authentication
gem 'devise'

# Testing
gem 'factory_girl_rails'
gem 'nyan-cat-formatter'
gem 'capybara'

group :test, :development do
  gem 'rspec-rails'
  gem 'rb-fsevent'
  gem 'guard-rspec'
end

group :test do
  gem 'shoulda-matchers'
end

# Development
group :development do
  gem 'debugger'
  gem 'better_errors'
  gem 'binding_of_caller'
end

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'uglifier'
end

# Forms
gem 'simple_form'

# Frontend
gem 'jquery-rails'
gem 'haml'
